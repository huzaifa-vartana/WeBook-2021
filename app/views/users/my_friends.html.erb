<h1 class="text-center">Track Friendships</h1>
<div class="search-area">
  <h3>Search for friends using Email or First Name</h3>
  <div class="form-group row">
    <div class="col-sm-9">
      <%= search_form_for( @q , url: my_friends_path ) do |f| %>
        <%= f.search_field :first_name_or_email_cont  ,class: 'form-control form-control-lg' %>
        <%= f.submit class:"btn btn-primary" %>
      <%end%>
    </div>
  </div>
</div>
<% if params[:q]%>
  <%= render 'users/friends' %>
<% end %>
<div id="results"></div>
<% if @friendships.empty? %>
  <h5 class="text-center text-primary mt-3">You don't currently have any friendships</h5>
<% else %>
  <h3 class="text-center">Following</h3>
  <%= render 'friends/list' %>
<% end %>
