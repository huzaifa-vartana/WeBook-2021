<div class="row">
  <div class="col-11">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th class="email-column" scope="col">Email Address</th>
          <th scope="col">Name</th>
          <th scope="col">Friends Since</th>
          <th class="friend-actions-column" scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friendships.each do |friendship| %>
          <tr>
            <td><%= friendship.friend.email %></td>
            <td><%= friendship.friend.full_name %></td>
            <td><%= friendship.created_at.strftime("%d %B, %Y") %></td>
            <td>
              <%= link_to 'View profile', friendship.friend, class: 'btn btn-sm btn-info mr-2'%>
              <%= link_to 'Stop following', friendship_path(friendship.friend), method: :delete,
                        data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
